<%= form_with model: @blog_post do |form|%>
    <% if form.object.errors.any?%>
        <%= form.object.errors.full_messages do |message|%>
        
           <div>    <%= message%>  </div>
            <% end %>
         <% end %>
        
    <%= form.label:title %>
    <%= form.text_field:title %>

    <%= form.label:body %>
    <%= form.text_area:body %>

    <%= form.button %>

 <%end%>