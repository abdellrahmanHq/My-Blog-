<%= form_with model: @blog_post do |form|%>
    <% if form.object.errors.any?%>
        <%= form.object.errors.full_messages do |message|%>
        
           <div>    <%= message%>  </div>
            <% end %>
         <% end %>
        
    <%= form.label:title %>
    <%= form.text_field:title %>

    <%= form.label:body %>
    <%= form.text_area:body %>

     <div>
         <%= form.label :published_At%>
         <%= form.datetime_select :published_At,include_blank:true%>
         
     </div>

    <%= form.button %>

 <%end%>